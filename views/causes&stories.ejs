<div class="container my-3">
  <br />
  <div class=" container flash-container ">
    <% if(error && error.length > 0 ) { %>
    <div class="row d-flex justify-content-between m-2">
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert" style="width: 100%;">
            <%= error %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        </div>
    </div>
    <% } %>
    <% if(success && success.length > 0 ) { %>
        <div class="row d-flex justify-content-between m-2">
            <div class="alert alert-success alert-dismissible fade show text-center" role="alert" style="width: 100%;">
                <%= success %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    <% } %>
</div>
  
  <div id="stories" >
    <div class="row justify-content-between">
      <div>
        <lord-icon
          src="https://cdn.lordicon.com//jvucoldz.json"
          trigger="loop"
          colors="primary:#121331,secondary:#eeca66"
          style="width: 60px; height: 60px"
        >
        </lord-icon
        >&nbsp; S T O R I E S
      </div>
      <div>
        <span class="mr-0">
          <a
            class="btn btn-md rounded-2 btn-outline-warning"
            href="/addstory"
            >Add a Story</a
          >
        </span>
      </div>
    </div>
  </div>

  <hr />
  <br />
  <div class="row justify-content-center mx-auto">
    <% stories.forEach(function(story){ %>
    <div class="col-12 col-lg-6 my-2">
      <div class="card border-0 mb-3" id="card">
        <div class="row no-gutters">
          <div class="col-6">
            <img src="<%= story.image.url %>" alt="..." />
          </div>
          <div class="col-6">
            <div class="card-body">
              <small class="card-subtitle mb-2 text-muted">
                <%= moment(story.date).fromNow() %> &bullet;
                <i> <%= story.authorname %></i>
              </small>
              <h5 class="card-title"><%= story.title %></h5>
              <p class="card-text"><%= story.body.substring(0, 70) %>...</p>
              <a
                href="/causes&stories/<%= story._id%>/readmore"
                class="btn btn-outline-warning"
                >Read More</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
<%- include("./partials/footer") %>
