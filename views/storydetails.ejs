<%- include("./partials/header") %>
<title>Aid | <%= story.title %></title>
<link rel="stylesheet" href="/stylesheets/cover-pic.css" />
<link rel="stylesheet" href="/stylesheets/storydetails.css" />

<div id="cover-pic" style="background-image: url(/images/blogdetails.jfif)">
  <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
  <div class="container" id="pic">
    <div id="pic-text-one">
      Stories at <b>Aid</b><span style="color: #ffb400">.</span>
    </div>
    <div id="pic-text-two">and how it touches people's lives !</div>
    <br />
    <a id="pic-button" class="btn btn-md" href="#story">READ MORE</a>
  </div>
</div>
<div class="container" id="story">
  <br />
  <br />
  <div class="row">
    <div class="d-none d-md-block col-md-3">
      <div class="container"></div>
    </div>
    <div class="col-12 col-md-6">
      <div class="container" id="content">
        <div id="title"> <script src="https://cdn.lordicon.com//libs/frhvbuzj/lord-icon-2.0.2.js"></script>
          <lord-icon
              src="https://cdn.lordicon.com//zbopvjaq.json"
              trigger="loop"
              colors="primary:#121331,secondary:#eeca66"
              style="width:60px;height:60px">
          </lord-icon><%= story.title %></div>
        <br />
        <img id="image" src="<%= story.image.url %>">
        <br />
        <br>
        <br>
        <div> <span class="comma"> "</span><%= story.body %> <span class="comma"> "</span></div>
        <br />
        <form action="/causes&stories/<%= story._id %>/readmore/comment" method="POST">
          <div class="row" >
            <div class="col-9">
              <input
              required
              type="text"
              class="form-control"
              placeholder="Add your comment"
              name="comment"
            />
            </div>
            <div class="col-3">
              <input type="submit" class="btn btn-outline-success">
            </div>
          
          </div>
        </form>
      <br>
        <button class="accordion">View All Comments</button>
        <div class="panel">
          <% if ( story.comments.length > 0){ %> 
          <%for(i= story.comments.length-1; i>-1;i--){%>
          <div > @<%= story.comments[i].authorname %> : <%= story.comments[i].body %></div>
          <small class="text-muted">&bullet; <%= moment(story.comments[i].date).fromNow() %></small>
          <hr>
          <% } %> 
          <% }else{ %>
          <div>No comments yet !</div>
          <% } %>
        </div>
        <div><br></div>
        <br>
        

      </div>
      <br>
        <br>
        
    </div>
    <div class="d-none d-md-block col-md-3">
      <div class="container"></div>
    </div>
  </div>
</div>

<script src="/scripts/storydetails.js"></script>

<%- include("./partials/footer") %>
